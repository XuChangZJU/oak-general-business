<!-- index.wxml -->
<view class="page-body">
    <view class="userInfo">
        <block wx:if="{{avatar}}">
            <image class="avatar" src="{{avatar}}" mode="aspectFit" />
        </block>
        <block wx:else>
            <g-icon name="person_outline" size="120"></g-icon>
        </block>
    </view>
    <g-panel>
        <g-cell label="手机号">
            <view wx:if="{{mobileCount > 1}}">{{mobileCount}}条手机号</view>
            <view wx:elif="{{mobileCount === 1}}">{{mobile}}</view>
            <view wx:else>未设置</view>
        </g-cell>
        <g-cell label="昵称">{{nickname || '未设置'}}</g-cell>
        <g-cell label="姓名">{{name || '未设置'}}</g-cell>
        <g-cell label="用户状态">
            <view class="user-state-{{userState}}">{{userState}}</view>
        </g-cell>
        <g-cell label="实名验证">
            <view class="id-state-{{idState}}">{{idState}}</view>
        </g-cell>
    </g-panel>
    <view style="flex:1" />
    <g-btn bind:click="openDrawer">更多</g-btn>
    <action-panel show="{{show}}" bind:close="closeDrawer" style="align-self:stretch" actions="{{oakLegalActions}}" actionDescriptions="{{actionDescriptions}}" bind:click="onActionClick" />
</view>