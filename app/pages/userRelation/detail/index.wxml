<!-- index.wxml -->
<view class="container">
    <view class="col">
        <block wx:for="{{users}}" wx:key="index">
            <view class="card-view">
                <t-checkbox key="{{item.id}}" checked="{{item.isChecked || false}}" />
                <block wx:if="{{item.avatar}}">
                    <image class="avatar" src="{{item.avatar}}" mode="aspectFit" />
                </block>
                <block wx:else>
                    <view class="img-view">
                        <t-icon name="image" size="35px" />
                    </view>
                </block>
                <view class="row">
                    <view class="col">
                        <text class="nickname">{{item.nickname || '未设置'}}</text>
                        <text class="mobile">姓名: {{item.name  || '未设置'}}</text>
                        <text class="mobile">手机: {{item.mobile  || '未设置'}}</text>
                    </view>
                    <t-tag shape="round" bind:click="addUserRelation">添加</t-tag>
                </view>
            </view>
        </block>
    </view>
</view>