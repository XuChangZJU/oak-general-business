<!-- index.wxml -->
<view class="page-body">
    <view class="g-form" style="flex: 1">
        <view class="g-form-item">
            <view class="g-form-item-label">收货人</view>
            <view class="g-form-item-content {{oakFocused.name}}">
                <input placeholder="姓名" value="{{name}}" type="string" data-path="name" focus="{{!!oakFocused.name}}" bindinput="setUpdateData" confirm-type="done" />
            </view>
        </view>
        <view class="g-form-item">
            <view class="g-form-item-label">手机号</view>
            <view class="g-form-item-content {{oakFocused.phone}}">
                <input placeholder="请输入" value="{{phone}}" type="string" data-path="phone" focus="{{!!oakFocused.phone}}" bindinput="setUpdateData" confirm-type="done" />
            </view>
        </view>
        <view class="g-form-item" hover-class="label-bar-hover" bindtap="callPicker" data-path="area" data-depth="{{3}}">
            <view class="g-form-item-label">所在地区</view>
            <view class="g-form-item-content {{oakFocused.areaId}}">
                <view style="display: flex; flex: 1; align-items: center; justify-content:space-between">
                    <text>{{areaText || '请选择'}}</text>
                    <span class="material-icons" color="#495060">chevron_right</span>
                </view>
            </view>
        </view>
        <view class="g-form-item">
            <view class="g-form-item-label">详细地址</view>
            <view class="g-form-item-content {{oakFocused.detail}}">
                <textarea class="g-input" placeholder="请输入" value="{{detail}}" auto-height maxlength="50" focus="{{!!oakFocused.detail}}" data-path="detail" bindinput="setUpdateData" confirm-type="done" />
            </view>
        </view>
    </view>
    <view class="btn-box">
        <button
            class="g-btn g-btn-primary {{ oakExecuting && 'g-btn-loading'}} {{ !oakDirty && 'g-btn-disabled'}}"
            type="primary"
            disabled="{{oakExecuting || !oakDirty}}"
            bind:tap="execute"
            data-then="afterUpsert"
            size="default"
        >
            <view class="g-btn-loading-inner" wx:if="{{oakExecuting}}"></view>
            确定
        </button>
    </view>
</view>