<!-- index.wxml -->
<view class="page-body">
    <view class="userInfo">
        <block wx:if="{{avatar}}">
            <image class="avatar" src="{{avatar}}" mode="aspectFit" />
        </block>
        <block wx:else>
            <span class="material-symbols-rounded avatar" style="width:auto">person_outline</span>
        </block>
    </view>
    <view class="info-panel" style="display:flex; flex-direction:column; flex: 1">
        <view class="g-cell">
            <view class="g-cell-label">手机号</view>
            <view class="g-cell-content-right">
                <view wx:if="{{mobileCount > 1}}">{{mobileCount}}条手机号</view>
                <view wx:elif="{{mobileCount === 1}}">{{mobile}}</view>
                <view wx:else>未设置</view>
            </view>
        </view>
        <view class="g-cell">
            <view class="g-cell-label">昵称</view>
            <view class="g-cell-content-right">
                {{nickname || '未设置'}}
            </view>
        </view>
        <view class="g-cell">
            <view class="g-cell-label">姓名</view>
            <view class="g-cell-content-right">
                {{name || '未设置'}}
            </view>
        </view>
        <view class="g-cell">
            <view class="g-cell-label">用户状态</view>
            <view class="g-cell-content-right">
                <view class="user-state-{{userState}}">
                    {{userState}}
                </view>
            </view>
        </view>
        <view class="g-cell">
            <view class="g-cell-label">实名验证</view>
            <view class="g-cell-content-right">
                <view class="id-state-{{idState}}">
                    {{idState}}
                </view>
            </view>
        </view>
    </view>
</view>