<!-- index.wxml -->
<view class="page-body">
    <view class="row">
        <text>一般用法</text>
    </view>
    <g-btn bind:click="handleClick" inline>行内按钮</g-btn>
    <g-btn bind:click="handleClick" inline type="primary">行内按钮</g-btn>
    <g-btn bind:click="handleClick" inline type="success">行内按钮</g-btn>
    <g-btn bind:click="handleClick">默认按钮</g-btn>
    <g-btn bind:click="handleClick" type="error" long="true">联通两边按钮</g-btn>
    <g-btn bind:click="handleClick" type="primary">Primary</g-btn>
    <g-btn bind:click="handleClick" type="ghost">Ghost</g-btn>
    <g-btn bind:click="handleClick" type="info">Info</g-btn>
    <g-btn bind:click="handleClick" type="success">Success</g-btn>
    <g-btn bind:click="handleClick" type="warning">Warning</g-btn>
    <g-btn bind:click="handleClick" type="error">Error</g-btn>
    <text>不同尺寸</text>
    <g-btn bind:click="handleClick" type="primary" size="large">大尺寸</g-btn>
    <g-btn bind:click="handleClick" type="primary" size="default">默认尺寸</g-btn>
    <g-btn bind:click="handleClick" type="primary" size="small">小尺寸</g-btn>
    <g-btn bind:click="handleClick" type="primary" loading="true">加载中按钮</g-btn>
    <g-btn bind:click="handleClick" type="primary" disabled>禁用按钮</g-btn>
</view>